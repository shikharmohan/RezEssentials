<div id="blog">
  <div class="row title">
    <div class="span12">
      <h1>{{ blog.title }}</h1>
    </div> <!-- /.span12 -->
  </div> <!-- /.row -->
  {% if blog.all_tags.size > 0 %}
  <div class="row">
    <div class="span12">
      <div class="tags">
        <ul class="clearfix">
          <li{% unless current_tags %} class="active"{% endunless %}><a href="{{ blog.url }}">All</a>
          {% for tag in blog.all_tags %}
          {% if current_tags contains tag %}
          <li class="active">{{ tag | link_to_remove_tag: tag }}</li>
          {% else %}
          <li>{{ tag | link_to_add_tag: tag }}</li>
          {% endif %}
          {% endfor %}
        </ul>
      </div> <!-- /.tags -->
    </div> <!-- /.span12 -->
  </div> <!-- /.row -->
  {% endif %}
  <div class="row">
    <div class="span9 articles">
      {% paginate blog.articles by settings.pagination_limit %}
      {% for article in blog.articles %}
      <div class="article">
        <h1><a href="{{ article.url }}">{{ article.title }}</a> <span class="date">{{ article.created_at | date: "%B %d %Y" }}</span></h1>
        {% if article.excerpt.size > 0 %}
        {{ article.excerpt }}
        {% else %}
        {{ article.content | strip_html | truncatewords: 70 }}
        {% endif %}
      </div> <!-- /.article -->
      {% endfor %}
      {% include 'pagination' %}
      {% endpaginate %}
    </div> <!-- /.span9 -->
    {% include 'blog_sidebar' %}
  </div> <!-- /.row -->
</div> <!-- /#blog -->

